generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Meeting {
  id            String   @id @default(uuid())
  userId        String   // Clerk user id

  meetingUrl    String
  title String @default("Default")
  startTime     DateTime
  endTime       DateTime

  status        MeetingStatus @default(UPCOMING)

  isBotAssigned Boolean @default(false)

  errorReason   String?  // nullable, set only on failure

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum MeetingStatus {
  UPCOMING
  RUNNING
  PROCESSING
  COMPLETED
  FAILED
}

